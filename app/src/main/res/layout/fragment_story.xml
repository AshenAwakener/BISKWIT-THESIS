<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Content.storyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Title"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/chewy"
                android:gravity="center_horizontal"
                android:text="Magbasa"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#48CCCD"
                android:textColorHint="#000000"
                android:textSize="50dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/Tula"
                android:background="@drawable/roundshape"
                android:padding="10dp"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:src="@drawable/buttontula"
                android:scaleType="centerCrop"
                android:text="Progreso"
                app:backgroundTint="#EBDAFF"
                android:textColor="#000000"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/Pabula"
                android:background="@drawable/roundshape"
                android:padding="10dp"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:src="@drawable/buttonpabula"
                android:scaleType="centerCrop"
                android:text="Progreso"
                app:backgroundTint="#FFBCDA"
                android:textColor="#000000"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="93dp"
                android:layout_height="91dp"
                android:layout_gravity="right"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="25dp"
                app:srcCompat="@drawable/backbutton"
                android:text="Go Back"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>