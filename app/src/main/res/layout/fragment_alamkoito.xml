<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebg"
    tools:context=".Content.Lessons.AlamkoitoFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Title"
                android:layout_width="241dp"
                android:layout_height="56dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/chewy"
                android:gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:text="Alam ko ito!"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#000000"
                android:textSize="40dp" />

            <Button
                android:id="@+id/Days"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:background="@drawable/roundshape"
                android:text="Mga araw sa isang linggo"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Years"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:background="@drawable/roundshape"
                android:text="Mga Buwan sa Isang Taon"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Opposite"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:background="@drawable/roundshape"
                android:text="Mga Salitang Magkasalungat"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Synonymous"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:background="@drawable/roundshape"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:text="Mga Salitang Magkasingkahulugan"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Sounds"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:background="@drawable/roundshape"
                android:fontFamily="@font/crimson_text"
                android:text="Mga Tunog"
                android:textColor="#000000"
                android:textSize="20dp"
                app:backgroundTint="#FFFFFF" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="93dp"
                android:layout_height="91dp"
                android:layout_gravity="right"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="25dp"
                app:srcCompat="@drawable/backbutton"
                android:text="Go Back"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>