                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#1C388F"
                android:textColorHint="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lesson2"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/opendyslexic_bold"
                android:lineSpacingExtra="5dp"
                android:text="Mga Halimbawa dito ay: \nB - Baboy (BA-BOY)
                                \nC = K - Cassette (CA-SETTE)
                                \nC = S Circle (CIR-CLE)
                                \nD - Daga (DA-GA)
                                \nF - Folder (FOL-DER)
                                \nG - Ginto (GIN-TO)
                                \nJ = Dy - Juice (DYU-S),
                                \nJ = H - Jose (HO-SE)
                                \nK - Kamatis (KA-MA-TIS)
                                \nL - Lapis (LA-PIS)
                                \nM - Mangga (MANG-GA)
                                \nN - Niyog (NI-YOG)
                                \nNg - Ngipin (NGI-PIN)
                                \nP - Pera (PE-RA)
                                \nQ = K - Quiz (KU-WIZ)
                                \nR - Rosaryo (RO-SAR-YO)
                                \nS - Sandok (SAN-DOK)
                                \nT - Tuka (TU-KA)
                                \nV - Van(V-AN),
                                \nW - Walis (WA-LIS),
                                \nX = Eks - X-ray (EKS-RAY)
                                \nX = S - Xerox (SE-ROX)
                                \nY - Yaya (YA-YA)
                                \nZ - Zombie (ZOM-BIE)"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#1C388F"
                android:textColorHint="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/backbutton"
                android:layout_width="93dp"
                android:layout_height="91dp"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/nextbutton"
                android:layout_gravity="right"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>