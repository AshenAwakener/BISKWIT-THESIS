<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Content.Story.TulaActivities.Maglaro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/Title"
                android:layout_width="350dp"
                android:layout_height="186dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/chewy"
                android:gravity="center_horizontal"
                android:text="Magdasal"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="@color/text"
                android:textColorHint="#000000"
                android:textSize="50dp"
                app:srcCompat="@drawable/tula_maglaro" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Bot2"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    app:srcCompat="@drawable/atechay" />

                <ImageView
                    android:id="@+id/space1"
                    android:layout_width="93dp"
                    android:layout_height="91dp"
                    android:layout_weight="1"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/Bot"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="50dp"
                    app:srcCompat="@drawable/kuyamatt" />

            </LinearLayout>

            <TextView
                android:id="@+id/Story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#000000"
                android:fontFamily="@font/crimson_text"
                android:textSize="30dp" />

            <ProgressBar
                android:id="@+id/ProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/custom_progressbar" />

            <TextView
                android:id="@+id/Word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:layout_gravity="center"
                android:textColorHint="#000000"
                android:textColor="#65B670"
                android:fontFamily="@font/crimson_text"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageView2"
                    android:layout_width="93dp"
                    android:layout_height="91dp"
                    android:layout_marginLeft="40dp"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:background="@drawable/mic_off"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/space"
                    android:layout_width="93dp"
                    android:layout_height="91dp"
                    android:layout_weight="1"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/nextButton"
                    android:layout_width="93dp"
                    android:layout_height="91dp"
                    android:layout_weight="1"
                    android:layout_marginRight="40dp"
                    app:srcCompat="@drawable/nextbutton"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/Queue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#E5E4E2"
                android:fontFamily="@font/crimson_text"
                android:textSize="30dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>