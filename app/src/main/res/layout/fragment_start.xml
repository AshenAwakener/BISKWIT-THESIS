<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainDrawer.StartFragment"
    android:background="@drawable/bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="293dp"
                android:layout_height="63dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/opendyslexic_bold"
                android:gravity="center_horizontal"
                android:text="Activities"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#48CCCD"
                android:textColorHint="#000000"
                android:textSize="50dp" />


            <ImageButton
                android:id="@+id/Easy"
                android:background="@drawable/roundshape"
                android:padding="10dp"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:src="@drawable/buttoneasy"
                android:scaleType="centerCrop"
                android:text="Magbasa"
                app:backgroundTint="#FF7F7F"
                android:textColor="#000000"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/Normal"
                android:background="@drawable/roundshape"
                android:padding="10dp"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:src="@drawable/buttonmagbasa"
                android:scaleType="centerCrop"
                android:text="Magbasa"
                app:backgroundTint="#FFC252"
                android:textColor="#000000"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/Hard"
                android:background="@drawable/roundshape"
                android:padding="10dp"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:src="@drawable/buttonhard"
                android:scaleType="centerCrop"
                android:text="Magbasa"
                app:backgroundTint="#FFF6A1"
                android:textColor="#000000"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/ProgressButton"
                android:background="@drawable/roundshape"
                android:padding="10dp"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:src="@drawable/buttonprogreso"
                android:scaleType="centerCrop"
                android:text="Progreso"
                app:backgroundTint="#AFFAAF"
                android:textColor="#000000"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>