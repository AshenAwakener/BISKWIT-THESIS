<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Content.LessonFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Title"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/chewy"
                android:gravity="center_horizontal"
                android:text="Aralin"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#48CCCD"
                android:textColorHint="#000000"
                android:textSize="50dp" />

            <Button
                android:id="@+id/Alphabet"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:background="@drawable/roundshape"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:text="Kabanata 1: Alphabet"
                app:backgroundTint="#FF7F7F"
                android:textColor="#000000"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/Orton"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:background="@drawable/roundshape"
                android:text="Kabanata 2: Orton-Gillingham"
                app:backgroundTint="#FFA500"
                android:textColor="#000000"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Patinig"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:background="@drawable/roundshape"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:text="Kabanata 3: Patinig"
                app:backgroundTint="#FFEB3B"
                android:textColor="#000000"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Katinig"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:background="@drawable/roundshape"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:text="Kabanata 4: Katinig"
                app:backgroundTint="#90EE90"
                android:textColor="#000000"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Alamkoito"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:background="@drawable/roundshape"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:text="Kabanata 5: Alam ko ito"
                app:backgroundTint="#00BCD4"
                android:textColor="#000000"
                android:fontFamily="@font/crimson_text"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/back"
                android:layout_width="93dp"
                android:layout_height="91dp"
                android:layout_gravity="right"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="25dp"
                app:srcCompat="@drawable/backbutton"
                android:text="Go Back"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>