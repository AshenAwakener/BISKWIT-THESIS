<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/actbg"
    tools:context=".Content.Lessons.PatinigActivities.PatinigLesson1">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:layout_editor_absoluteX="0dp"
      tools:layout_editor_absoluteY="361dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <ImageView
          android:id="@+id/Bot2"
          android:layout_width="82dp"
          android:layout_height="80dp"
          android:layout_marginTop="50dp"
          android:layout_marginBottom="10dp"
          android:layout_gravity="center"
          app:srcCompat="@drawable/bot_icon" />

      <TextView
          android:id="@+id/aralin"
          android:layout_width="312dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="10dp"
          android:fontFamily="@font/crimson_text"
          android:text="Aralin 1"
          android:textAlignment="center"
          android:textAppearance="@style/TextAppearance.AppCompat.Display3"
          android:textColor="#1C388F"
          android:textColorHint="#000000"
          android:textSize="50dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/aralin2"
          android:layout_width="312dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="10dp"
          android:fontFamily="@font/crimson_text"
          android:text="Patinig"
          android:textAlignment="center"
          android:textAppearance="@style/TextAppearance.AppCompat.Display3"
          android:textColor="#FF7F7F"
          android:textColorHint="#000000"
          android:textSize="40dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/lesson1"
          android:layout_width="312dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="10dp"
          android:fontFamily="@font/crimson_text"
          android:text="Ito ay galaw ng bibig, saltik ng dila na may kasabay na tunog ng lalamunan o walang antalang bugso ng tinig sa pagbigkas ng salita. (a,e,i,o,u)."
          android:textAppearance="@style/TextAppearance.AppCompat.Display3"
          android:textColor="#1C388F"
          android:textColorHint="#000000"
          android:lineSpacingExtra="3dp"
          android:textSize="25dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/lesson2"
          android:layout_width="312dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="10dp"
          android:fontFamily="@font/crimson_text"
          android:textAppearance="@style/TextAppearance.AppCompat.Display3"
          android:textColor="#1C388F"
          android:textColorHint="#000000"
          android:textSize="25dp"
          android:lineSpacingExtra="3dp"
          android:textStyle="bold"
          android:text="Mga Halimbawa dito ay: \nA ay Apoy (A-POY)\nE ay Eroplano (E-RO-PLA-NO)\nI ay Ilaw (I-LAW)\nO ay Orasan (O-RA-SAN)\nU ay Unan (U-NAN)"/>

      <ImageView
          android:id="@+id/backbutton"
          android:layout_width="93dp"
          android:layout_height="91dp"
          android:layout_marginEnd="22dp"
          android:layout_marginRight="22dp"
          android:layout_marginTop="50dp"
          android:layout_marginBottom="30dp"
          app:srcCompat="@drawable/backbutton"
          android:layout_gravity="right"
          tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>
  </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>