<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Content.Progress.ProgressPatinig">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-137dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Title"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/chewy"
                android:gravity="center_horizontal"
                android:text="Progreso ng Patinig"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#48CCCD"
                android:textColorHint="#000000"
                android:textSize="40dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="360dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#FFBE45"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/kab3"
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="130dp"
                    android:fontFamily="@font/crimson_text"
                    android:gravity="center_horizontal"
                    android:text="Kabanata 2"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/aralin2"
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="100dp"
                    android:fontFamily="@font/crimson_text"
                    android:text="Aralin 2"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Patinig_A"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/crimson_text"
                        android:text="Patinig A"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/Patinig_A_Score"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="90dp"
                        android:background="@drawable/roundshape"
                        app:backgroundTint="#E5E4E2"
                        android:fontFamily="@font/crimson_text"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="25dp"
                        android:gravity="center_horizontal"
                        android:text="0%" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Patinig_E"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="130dp"
                        android:fontFamily="@font/crimson_text"
                        android:text="Patinig E"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/Patinig_E_Score"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="130dp"
                        android:background="@drawable/roundshape"
                        app:backgroundTint="#E5E4E2"
                        android:fontFamily="@font/crimson_text"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="25dp"
                        android:gravity="center_horizontal"
                        android:text="0%" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Patinig_I"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="170dp"
                        android:fontFamily="@font/crimson_text"
                        android:text="Patinig I"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/Patinig_I_Score"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="170dp"
                        android:background="@drawable/roundshape"
                        app:backgroundTint="#E5E4E2"
                        android:fontFamily="@font/crimson_text"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="25dp"
                        android:gravity="center_horizontal"
                        android:text="0%" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Patinig_O"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="210dp"
                        android:fontFamily="@font/crimson_text"
                        android:text="Patinig O"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/Patinig_O_Score"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="210dp"
                        android:background="@drawable/roundshape"
                        app:backgroundTint="#E5E4E2"
                        android:fontFamily="@font/crimson_text"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="25dp"
                        android:gravity="center_horizontal"
                        android:text="0%" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Patinig_U"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="250dp"
                        android:fontFamily="@font/crimson_text"
                        android:text="Patinig U"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/Patinig_U_Score"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="250dp"
                        android:background="@drawable/roundshape"
                        app:backgroundTint="#E5E4E2"
                        android:fontFamily="@font/crimson_text"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="25dp"
                        android:gravity="center_horizontal"
                        android:text="0%" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>