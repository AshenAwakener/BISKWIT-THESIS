<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orangebg"
    tools:context=".Content.Lessons.OrtonFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Title"
                android:layout_width="411dp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/chewy"
                android:gravity="center_horizontal"
                android:text="Orton-Gillingham"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="40dp" />

            <Button
                android:id="@+id/Phoenimic"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:background="@drawable/roundshape"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:text="Phoenimic Awareness"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                android:fontFamily="@font/crimson_text"
                android:textSize="25dp" />

            <Button
                android:id="@+id/Sight"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:background="@drawable/roundshape"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:text="Sight Words"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                android:fontFamily="@font/crimson_text"
                android:textSize="25dp" />

            <Button
                android:id="@+id/Blending"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:background="@drawable/roundshape"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:text="Blending Drills"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                android:fontFamily="@font/crimson_text"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/Pagbabaybay"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:background="@drawable/roundshape"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:text="Pagbabaybay"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                android:fontFamily="@font/crimson_text"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="93dp"
                android:layout_height="91dp"
                android:layout_gravity="right"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/roundshape"
                app:srcCompat="@drawable/backbutton"
                android:text="Go Back"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>