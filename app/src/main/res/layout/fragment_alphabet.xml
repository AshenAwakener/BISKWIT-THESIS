<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redbg"
    tools:context=".Content.Lessons.AbakadaFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/opendyslexic_bold"
                android:gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:text="Alphabet"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#000000"
                android:textSize="50dp" />

            <Button
                android:id="@+id/Patinig"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:background="@drawable/roundshape"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:text="Abakada 1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                android:fontFamily="@font/opendyslexic_bold"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Katinig"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:background="@drawable/roundshape"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:text="Abakada 2"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                android:fontFamily="@font/opendyslexic_bold"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Abakada"
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:background="@drawable/roundshape"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:text="Abakada 3"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                android:fontFamily="@font/opendyslexic_bold"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="93dp"
                android:layout_height="91dp"
                android:layout_gravity="right"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="25dp"
                app:srcCompat="@drawable/backbutton"
                android:text="Go Back"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>