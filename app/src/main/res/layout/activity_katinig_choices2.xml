<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Content.Lessons.KatinigActivities.KatinigChoices2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Title"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="HIRAM NA KATINIG"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#48CCCD"
                android:textStyle="bold"
                app:fontFamily="@font/opendyslexic_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/LetterCK"
                    android:layout_width="127dp"
                    android:layout_height="119dp"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/hiram_ck" />

                <ImageView
                    android:id="@+id/space"
                    android:layout_width="127dp"
                    android:layout_height="119dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/LetterCS"
                    android:layout_width="127dp"
                    android:layout_height="119dp"
                    android:layout_weight="1"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/hiram_cs" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/LetterF"
                    android:layout_width="127dp"
                    android:layout_height="119dp"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/hiram_f" />

                <ImageView
                    android:id="@+id/space2"
                    android:layout_width="127dp"
                    android:layout_height="119dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/LetterJ"
                    android:layout_width="127dp"
                    android:layout_height="119dp"
                    android:layout_weight="1"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/hiram_j" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/LetterQ"
                    android:layout_width="127dp"
                    android:layout_height="119dp"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/hiram_q" />

                <ImageView
                    android:id="@+id/space3"
                    android:layout_width="127dp"
                    android:layout_height="119dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/LetterV"
                    android:layout_width="127dp"
                    android:layout_height="119dp"
                    android:layout_weight="1"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/hiram_v" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/LetterXK"
                    android:layout_width="127dp"
                    android:layout_height="119dp"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/hiram_xk" />

                <ImageView
                    android:id="@+id/space4"
                    android:layout_width="127dp"
                    android:layout_height="119dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/LetterXS"
                    android:layout_width="127dp"
                    android:layout_height="119dp"
                    android:layout_weight="1"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/katinig_xs" />

            </LinearLayout>


                <ImageButton
                    android:id="@+id/LetterZ"
                    android:layout_width="127dp"
                    android:layout_height="119dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/katinig_z" />





        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>