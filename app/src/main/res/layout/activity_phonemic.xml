<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/actbg"
    tools:context=".Content.Lessons.OrtonActivities.Phonemic.Phonemic">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Title"
                android:layout_width="330dp"
                android:layout_height="76dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/opendyslexic_bold"
                android:gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:text="Phonemic"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#48CCCD"
                android:textColorHint="#000000"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:hint="Category"
                android:fontFamily="@font/opendyslexic_bold"
                android:textColor="#000000"
                android:textSize="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Bot2"
                    android:layout_width="82dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="25dp"
                    app:srcCompat="@drawable/atechay" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/accuracycounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundshape"
                    android:fontFamily="@font/crimson_text"
                    android:gravity="center"
                    android:text="Accuracy: 0%"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="25dp"
                    app:backgroundTint="#E5E4E2" />

                <TextView
                    android:id="@+id/scorecounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundshape"
                    android:fontFamily="@font/crimson_text"
                    android:gravity="center"
                    android:text="Score: 0"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="25dp"
                    app:backgroundTint="#E5E4E2" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Word"
                    android:layout_width="210dp"
                    android:layout_height="76dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:backgroundTint="#CFECEC"
                    android:background="@drawable/roundshape"
                    android:textAlignment="center"
                    android:fontFamily="@font/opendyslexic_bold"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="35dp" />

                <ImageButton
                    android:id="@+id/Mic"
                    android:layout_width="93dp"
                    android:layout_height="91dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_gravity="right"
                    android:scaleType="fitXY"
                    android:background="@drawable/mic_off"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Word2"
                    android:layout_width="211dp"
                    android:layout_height="76dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="30dp"
                    android:gravity="center"
                    android:backgroundTint="#CFECEC"
                    android:background="@drawable/roundshape"
                    android:fontFamily="@font/opendyslexic_bold"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="35dp" />

                <ImageButton
                    android:id="@+id/Mic2"
                    android:layout_width="93dp"
                    android:layout_height="91dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginRight="22dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/mic_off"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/ProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_progressbar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:fontFamily="@font/opendyslexic_bold"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="Press the mic button"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                    android:textColor="#48CCCD"
                    android:textColorHint="#000000"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/nextButton"
                    android:layout_width="93dp"
                    android:layout_height="91dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginRight="22dp"
                    app:srcCompat="@drawable/nextbutton"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>